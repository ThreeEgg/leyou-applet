/* pages/mine/components/companyItem/index.wxss */
.companyItem{
  width: 100%;
  height: 210rpx;
  position: relative;
  margin-bottom: 20rpx;
}

.companyItem .bg{
  width: 100%;
  height: 100%;
  position: absolute;
}

.companyItem .content{
  width: 100%;
  position: absolute;
  padding: 30rpx;
}

.companyItem .content view:nth-of-type(1){
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}

.companyItem .content view:nth-of-type(2){
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  margin-top: 10rpx;
}

.companyItem .content view:nth-of-type(3){
  display: flex;
  align-items: center;
  justify-content: flex-end;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  margin-top: 30rpx;
}

.companyItem .content view:nth-of-type(3) image{
  width: 24rpx;
  height: 24rpx;
  margin-right: 15rpx;
}
